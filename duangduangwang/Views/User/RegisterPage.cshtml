<script type="text/javascript">
    function checkForm() {
        var str = document.getElementById("phonenumber").value;
        var reg = /^[1][3,4,5,7,8][0-9]{9}$/;
        if (!reg.test(str)) {
            alert("手机号码格式不正确");
            return false;
        }
        var confirm = document.getElementById("confirm").value;
        var password = document.getElementById("password").value;
        if (password == confirm) {
            return true;
        } else {
            alert("密码不一致");
            return false;
        }
    }
</script>
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--Mid Section Start-->
<section>
    <div class="full_page">
        <h1>注册成为会员</h1>
        <!--CHECKOUT STEPS STARTS-->
        <div class="checkout_steps">
            <ol id="checkoutSteps">
                <li class="section allow active" id="opc-login">
                    <div class="step-title">
                        <h2>注册</h2>
                    </div>
                    <div id="checkout-step-login">
                        <form method="post" id="register-form" action="~/User/Register" onsubmit="return checkForm()">
                            <div class="col2-set">
                                <div class="col-1">
                                    <h3>@TempData["wrongMessage"]</h3>
                                    <h3>请填写信息</h3>
                                    <fieldset>
                                        <ul class="form-list">
                                            <li>
                                                <label class="required" for="login-email"><em>*</em>用户名</label>
                                                <div class="input-box">
                                                    <input name="username" type="text" class="input-text" required/>
                                                </div>
                                            </li>
                                            <li>
                                                <label class="required" for="login-password"><em>*</em>密码</label>
                                                <div class="input-box">
                                                    <input id="password" name="password" type="password" class="input-text" required/>
                                                </div>
                                            </li>
                                            <li>
                                                <label class="required" for="login-password"><em>*</em>确认密码</label>
                                                <div class="input-box">
                                                    <input id="confirm" name="confirm" type="password" class="input-text" required/>
                                                </div>
                                            </li>
                                            <li>
                                                <label class="required" for="login-password"><em>*</em>电话号码</label>
                                                <div class="input-box">
                                                    <input id="phonenumber" name="phonenumber" type="text" class="input-text" required/>
                                                </div>
                                            </li>
                                            <li>
                                                <label class="required" for="login-password"><em></em>收货人</label>
                                                <div class="input-box">
                                                    <input name="receiver" type="text" class="input-text" />
                                                </div>
                                            </li>
                                            <li>
                                                <label class="required" for="login-password"><em></em>收货地址</label>
                                                <div class="input-box">
                                                    <input name="address" type="text" class="input-text" />
                                                </div>
                                            </li>
                                        </ul>
                                        <br />
                                        <br />
                                    </fieldset>
                                    <div class="buttons-set" style="text-align: center">
                                        <input value="注册" class="button brown_btn" type="submit">
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </li>
            </ol>
        </div>
        <!--CHECKOUT STEPS ENDS-->
        <div class="col_right">
            <div class="block-progress">
                <div class="block-title">Your Checkout Progress</div>
                <ul>
                    <li>Billing Address</li>
                    <li>Shipping Address</li>
                    <li>Shipping Method</li>
                    <li>Payment Method</li>
                </ul>
            </div>
            <div class="right_promo">
                <img src="images/side_promo_banner.jpg" />
            </div>
        </div>
    </div>
    <!--Newsletter_subscribe Starts-->
    <div class="subscribe_block">
        <div class="find_us">
            <h3>Find us on</h3>
            <a class="twitter" href="#"></a> <a class="facebook" href="#"></a> <a class="rss" href="#"></a>
        </div>
        <div class="subscribe_nl">
            <h3>Subscribe to our Newsletter</h3>
            <small>Instant wardrobe updates, new arrivals, fashion news, don’t miss a beat – sign up to our newsletter now.</small>
            <form id="newsletter" method="post" action="#" />
            <input type="text" class="input-text" value="Enter your email" title="Enter your email" id="newsletter" name="email" />
            <button class="button" title="" type="submit"></button>
            </form>
        </div>
    </div>
    <!--Newsletter_subscribe Ends-->
</section>
<!--Mid Section Ends-->