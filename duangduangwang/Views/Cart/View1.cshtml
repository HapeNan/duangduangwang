<script type="text/javascript">
    function pl(id) {
        var i = id.substr(0, 1);
        var target = '#' + i + 'qty';

        var txt = $(target);
        var num = $(target).val();

        txt.val(parseInt(num) + 1);
    }
    function subtract(id) {
        var i = id.substr(0, 1);
        var target = '#' + i + 'qty';

        var txt = $(target);
        var num = $(target).val();
        if (parseInt(num) > 1) {
            txt.val(parseInt(num) - 1);
            upamountsub(id);
        }

    }
    function upamountpl(id) {
        var i = id.substr(0, 1);
        var pri = '#' + i + 'price';
        var totpri = '#totprice';
        var totpri2 = '#totprice2';
        var num1 = $(pri).text();
        var num2 = $(totpri).text();
        ($(totpri)).text((parseFloat(num2) + parseFloat(num1)).toFixed(2));
        ($(totpri2)).text((parseFloat(num2) + parseFloat(num1)).toFixed(2));
    }
    function upamountsub(id) {
        var i = id.substr(0, 1);
        var pri = '#' + i + 'price';
        var totpri = '#totprice';
        var totpri2 = '#totprice2';
        var num1 = $(pri).text();
        var num2 = $(totpri).text();
        ($(totpri)).text((parseFloat(num2) - parseFloat(num1)).toFixed(2));
        ($(totpri2)).text((parseFloat(num2) - parseFloat(num1)).toFixed(2));
    }
    function upamountdel(id) {
        var i = id.substr(0, 1);
        var pri = '#' + i + 'price';
        var qty = '#' + i + 'qty';
        var totpri = '#totprice';
        var totpri2 = '#totprice2';
        var num1 = $(pri).text();
        var num2 = $(totpri).text();
        var qty1 = $(qty).val();

        ($(totpri)).text((parseFloat(num2) - parseInt(qty1)*parseFloat(num1)).toFixed(2));
        ($(totpri2)).text((parseFloat(num2) - parseInt(qty1) *parseFloat(num1)).toFixed(2));
    }
    function delRow(obj) {
        var tr = this.getRowObj(obj);
        if (tr != null) {
            upamountdel(tr.id);
            tr.parentNode.removeChild(tr);
        } else {
            throw new Error("the given object is not contained by the table");
        }


    }
    function getRowObj(obj) {
        var i = 0;
        while (obj.tagName.toLowerCase() != "tr") {
            obj = obj.parentNode;
            if (obj.tagName.toLowerCase() == "table")
                return null;
        }
        return obj;
    }
    function plus(id) {
        var i = id.substr(0, 1);
        var target = '#' + i + 'qty';
        var txt = $(target);
        $.ajax({
            type: 'get',
            url: '/Cart/AjaxTest?Id='+ i+'qty=1',
            dataType: 'html',
            success: function () {
                pl(id);
                upamountpl(id);
            },
            error: function () {

            }

        });
    }
    function sub(id) {
        $.ajax({
            type: 'get',
            url: '/Cart/AjaxTest',
            dataType: 'html',
            success: function () {
                subtract(id);

            },
            error: function () {

            }

        });
    }
</script>

