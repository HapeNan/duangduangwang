@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "书籍详情";
}

<div class="section_container">
    <!--Mid Section Starts-->
    <section>
        <ul class="breadcrumb">
            <li><a href="~/Home">Home</a></li>
            <li><a href="#">book</a></li>
        </ul>
        <!--PRODUCT DETAIL STARTS-->
        <div id="product_detail">
            <!--Product Left Starts-->
            <div class="product_leftcol">
                @foreach (var book in ViewBag.book)
                {
                    <img src="@(book.Picture1)" /> <span class="pr_info">@book.BookName</span>
                    <ul class="pr_gallery">
                        <li><a href="#"><img src="@(book.Picture1)" style="height:85px;width:85px" /></a></li>
                        <li><a href="#"><img src="@(book.Picture2)" style="height:85px;width:85px" /></a></li>
                        <li><a href="#"><img src="@(book.Picture3)" style="height:85px;width:85px" /></a></li>
                    </ul>
                }
            </div>
            <!--Product Left Ends-->
            <!--Product Right Starts-->
            <div class="product_rightcol">
                @foreach (var book in ViewBag.book)
                {
                    <small class="pr_type">@(book.BookType)</small>
                <h1>@book.BookName</h1>
                <p class="short_dc" /> @(book.BookAbstract)

                <div class="pr_price"> <big>￥ @book.BookPrice</big> <small>￥ @(book.BookPrice * 1.8)</small> </div>
                }
                <div class="size_info">
                    <div class="size_sel">
                        <label> 尺寸:</label>
                        <select>
                            <option />SELECT
                            <option />32
                        </select>
                    </div>
                    <div class="color_sel">
                        <label>颜色 :</label>
                        <select>
                            <option />BEIGE
                            <option />CORAL
                        </select>
                    </div>
                </div>
                <div class="qty_info">
                    <div class="quantity">
                        <label>数量 :</label>
                        <select>
                            <option />1
                            <option />2
                            <option />3
                            <option />4
                        </select>
                    </div>
                </div>
                <div class="add_to_buttons">
                    <button onclick="parent.location='leisure_cart.html'" class="add_cart">加入购物车</button>
                    <span>or</span>
                    <ul>
                        <li><a href="#">加入愿望单</a></li>
                    </ul>
                </div>
                <div class="product_overview">
                    <h4>为您推荐</h4>
                    <ul>
                        @foreach (var t in ViewBag.tags)
                        { 
                        <li><a href="@Url.Action("GetBooksOfTag", "Book", new {tag=t})">@t</a></li>
                        }
                    </ul>
                </div>
            </div>
            <!--Product Right Ends-->
        </div>
