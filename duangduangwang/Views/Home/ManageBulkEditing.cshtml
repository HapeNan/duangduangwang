@using duangduangwang.Models;
@{

    ViewBag.Title = "批量修改";
    if (ViewBag.BookList == null)
    { ViewBag.BookList = new List<Book>(); }
    Layout = "~/Views/Shared/ManagerPage.cshtml";
}
<style type="text/css">
    table, table tr th, table tr td {
        text-align: center;
        border: 1px solid #000000;
    }
</style>
<section>
    <div class="full_page" style="margin-top:20px; ">
        <!--CHECKOUT STEPS STARTS-->
        <div class="checkout_steps" style="width:990px;">
            <ol id="checkoutSteps">
                <li class="section allow active" id="opc-login">
                    <div class="step-title" style="width:950px">
                        <h2>输入查询条件</h2>
                    </div>
                    <div id="checkout-step-login">
                        <form method="post" id="login-form" action="" />
                        <div class="col2-set">
                            <div class="col-2" style="float:left;margin-left:130px; margin-right:40px;">
                                <fieldset>
                                    <ul class="form-list">
                                        <li>
                                            <label class="required" for="login-email">图书编号</label>
                                            <div class="input-box">
                                                <input type="text" value="" class="input-text" />
                                            </div>
                                        </li>
                                        <li>
                                            <label class="required" for="login-password">图书名称</label>
                                            <div class="input-box">
                                                <input type="text" class="input-text" />
                                            </div>
                                        </li>
                                        <li>
                                            <label class="required" for="login-password">出版社</label>
                                            <div class="input-box">
                                                <input type="text" class="input-text" />
                                            </div>
                                        </li>
                                        <li>
                                            <label class="required" for="login-password">图书类型</label>
                                            <div class="input-box">
                                                <input type="text" class="input-text" />
                                            </div>
                                        </li>
                                    </ul>
                                    <br>
                                </fieldset>
                            </div>
                            <div class="col-2" style="float:left; margin-left:150px;">

                                <fieldset>
                                    <ul class="form-list">

                                        <li>
                                            <label class="required" for="login-password">作者姓名</label>
                                            <div class="input-box">
                                                <input type="text" class="input-text" />
                                            </div>
                                        </li>
                                        <li>
                                            <label class="required" for="login-password">出版时间</label>
                                            <div class="input-box">
                                                <input type="date" class="input-text" />
                                            </div>
                                        </li>
                                        <li>
                                            <label class="required" for="login-password">优惠类型</label>
                                            <div class="input-box">
                                                <input type="text" class="input-text" />
                                            </div>
                                        </li>
                                        <li>
                                            <label class="required" for="login-password">图书标签</label>
                                            <div class="input-box">
                                                <input type="text" class="input-text" />
                                            </div>
                                        </li>
                                    </ul>
                                    <br>
                                </fieldset>

                            </div>
                        </div>
                        <div class="col2-set">
                            <div class="col-1" style="margin-left:190px;">
                                <div class="buttons-set">
                                    <button class="button brown_btn" type="button">&nbsp;&nbsp;&nbsp;查询&nbsp;&nbsp;&nbsp;</button>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="buttons-set">
                                    <button class="button brown_btn" type="button">显示全部</button>
                                </div>
                            </div>
                        </div>
                        </form>
                    </div>
                </li>
                <li class="section allow active" id="opc-login">

                    <div class="step-title" style="width:950px">
                        <h2>图书列表</h2>
                    </div>
                    <div id="checkout-step-login">
                        <table style="width:935px; margin-left:0px;" border="1" cellspacing="0" cellpadding="0">

                            <tr>
                                <td><input type="checkbox">全选</td>
                                <td width="100px">图书编号</td>
                                <td width="100px">图书名称</td>
                                <td width="100px">出版社</td>
                                <td width="50px">图书类型</td>
                                <td width="100px">图书标签</td>
                                <td width="100px">作者</td>
                                <td width="100px">出版时间</td>
                                <td width="100px">优惠类型</td>
                                <td width="100px">优惠详情</td>

                            </tr>

                            @if (ViewBag.BookList.Count == 0)
        {
                    <tr>
                        <td colspan="10">
                            查询结果为空

                        </td>

                    </tr>
}
else
{
foreach (var book in ViewBag.BookList)
{
                    <tr>
                        <td><input type="checkbox"></td>
                        <td><a href="#">@book.BookId</a></td>
                        <td>@book.BookName</td>
                        <td>@book.Publisher</td>
                        <td>@book.BookType</td>
                        <td>@book.Tag</td>
                        <td>@book.BookWriter</td>
                        <td>@book.PublishTime</td>
                        <td>@book.Coupon</td>
                        <td>@book.CouponDetail</td>
                    </tr>
}
}
                        </table>


                        <div id="checkout-step-login">
                            <form method="post" id="login-form" action="" />
                            <div class="col2-set">
                                <div class="col-2" style="float:left;margin-left:130px; margin-right:40px;">
                                    <fieldset>
                                        <ul class="form-list">

                                            <li>
                                                <label class="required" for="login-password">图书名称</label>
                                                <div class="input-box">
                                                    <input type="text" class="input-text" />
                                                </div>
                                            </li>
                                            <li>
                                                <label class="required" for="login-password">出版社</label>
                                                <div class="input-box">
                                                    <input type="text" class="input-text" />
                                                </div>
                                            </li>
                                            <li>
                                                <label class="required" for="login-password">优惠类型</label>
                                                <div class="input-box">
                                                    <input type="text" class="input-text" />
                                                </div>
                                            </li>
                                            <li>
                                                <label class="required" for="login-password">图书类型</label>
                                                <div class="input-box">
                                                    <input type="text" class="input-text" />
                                                </div>
                                            </li>
                                        </ul>
                                        <br>
                                    </fieldset>
                                </div>
                                <div class="col-2" style="float:left; margin-left:150px;">

                                    <fieldset>
                                        <ul class="form-list">

                                            <li>
                                                <label class="required" for="login-password">作者姓名</label>
                                                <div class="input-box">
                                                    <input type="text" class="input-text" />
                                                </div>
                                            </li>
                                            <li>
                                                <label class="required" for="login-password">出版时间</label>
                                                <div class="input-box">
                                                    <input type="date" class="input-text" />
                                                </div>
                                            </li>
                                            <li>
                                                <label class="required" for="login-password">优惠详情</label>
                                                <div class="input-box">
                                                    <input type="text" class="input-text" />
                                                </div>
                                            </li>
                                            <li>
                                                <label class="required" for="login-password">图书标签</label>
                                                <div class="input-box">
                                                    <input type="text" class="input-text" />
                                                </div>
                                            </li>
                                        </ul>
                                        <br>
                                    </fieldset>

                                </div>
                            </div>
                            <div class="col2-set">
                                <div class="col-1" style="margin-left:190px;">
                                    <div class="buttons-set">
                                        <button class="button brown_btn" type="button">&nbsp;&nbsp;&nbsp;修改&nbsp;&nbsp;&nbsp;</button>
                                    </div>
                                </div>
                                <div class="col-2">
                                    <div class="buttons-set">
                                        <button class="button brown_btn" type="button">还原</button>
                                    </div>
                                </div>
                            </div>
                            </form>
                        </div>


                    </div>
                </li>



            </ol>
        </div>
        <!--CHECKOUT STEPS ENDS-->

    </div>
    <!--Newsletter_subscribe Starts-->

    <div class="subscribe_block">
        <div class="find_us">
            <h3>联系我们</h3>
            <a class="twitter" href="#"></a> <a class="facebook" href="#"></a> <a class="rss" href="#"></a>
        </div>
        <div class="subscribe_nl">
            <h3>发送至我们的邮箱</h3>
            <small>如果您在使用中有任何问题或者建议，请邮箱联系我们</small>
            <form id="newsletter" method="post" action="#" />
            <input type="text" class="input-text" value="Enter your email" title="Enter your email" id="newsletter" name="email" />
            <button class="button" title="" type="submit"></button>
            </form>
        </div>
    </div>
    <!--Newsletter_subscribe Ends-->
</section>

